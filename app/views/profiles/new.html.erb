<%= simple_form_for(Profile.new, :url => "/profiles/create",  :html => {:method => :post}) do |f| %>
  <%= f.error_notification %>
  <div class='dashboard-wrapper'>
    <div class='content-header'>
    <h3 class='title'>Image</h3>
  </div>
  <div class='main-container' style = "padding: 60px;margin: 20px;min-height: 407px;border: 5px solid #e6e6e6;">
  <div class="form-group center">
    <%= f.file_field :product_image, :placeholder => "Profile Image", label: false, :type => "file" , class: "form-control-new" %>
  </div>
  </div>
  <hr />
    
   
  </div>
  <div class="form-group center" style ="text-align:center ;">
    <button class="btn btn-primary new" type="submit">
      <% if current_page?(action: 'new') %>
        Upload Image 
      <% else %>
        Update
      <% end %>
    </button>
  </div>
  <div class="clear"></div>
  
<% end %>




